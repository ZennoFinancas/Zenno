<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMeta"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#712aaf">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/lblEditarMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nome da Meta"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valorMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblEditarMeta"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="R$00,00 | R$00,00"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressoMetas"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/valorMeta"
            android:layout_marginTop="22dp"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGuardarDinheiro"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/cifr_o" />

            <ImageView
                android:id="@+id/imgExcluirMeta"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="#FFFFFF" />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>