<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMeta"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#712aaf">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- título -->
        <TextView
            android:id="@+id/tituloNomedaMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nome da Meta"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- subtítulo -->
        <TextView
            android:id="@+id/valorMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloNomedaMeta"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="R$00,00 | R$00,00"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- barra de progresso -->
        <ProgressBar
            android:id="@+id/progressoMetas"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/valorMeta"
            android:layout_marginTop="22dp"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <!-- ícone cifrão -->
        <ImageView
            android:id="@+id/imgEditarMeta"
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/cifr_o" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
