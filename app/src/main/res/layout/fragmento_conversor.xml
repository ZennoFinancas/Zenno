<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.conversor.ConversorFragmento">

    <ImageView
        android:id="@+id/imgFundo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fundo_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tituloConversor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/tituloConversor"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtituloConversor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/subtituloConversor"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituloConversor" />

            <LinearLayout
                android:id="@+id/containerCentral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/txtResultado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtituloConversor"
                app:layout_constraintVertical_bias="0.3">
                <TextView
                    android:id="@+id/lblQuantiaConversor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/lblQuantiaConversor"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/containerInputMisto"
                    android:layout_width="314dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/backgroud_roxo"
                    android:backgroundTint="#712aaf"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <EditText
                        android:id="@+id/txtQuantiaConversor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableTint="#FFFFFF"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="ex: 9,99"
                        android:inputType="numberDecimal"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BFBFBF"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/containerSpMoeda"
                        android:layout_width="170dp"
                        android:layout_height="36dp">

                        <Spinner
                            android:id="@+id/spMoeda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:paddingStart="0dp" />

                        <ImageView
                            android:id="@+id/imgSetaMoeda"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/seta_spinner" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgConversor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:rotation="90"
                    app:srcCompat="@drawable/conversor" />

                <TextView
                    android:id="@+id/lblConverterConversor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/lblConverterConversor"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/containerInputMisto2"
                    android:layout_width="314dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/backgroud_roxo"
                    android:backgroundTint="#712aaf"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <EditText
                        android:id="@+id/txtResultadoConversor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableTint="#FFFFFF"
                        android:focusable="false"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="0,00"
                        android:inputType="numberDecimal"
                        android:textAlignment="textStart"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BFBFBF"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/containerSpMoedaDestino"
                        android:layout_width="170dp"
                        android:layout_height="36dp">

                        <Spinner
                            android:id="@+id/spMoedaDestino"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:paddingStart="0dp" />

                        <ImageView
                            android:id="@+id/imgSetaMoedaDestino"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/seta_spinner" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Resultado da ConversÃ£o"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/btnConverter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnConverter"
                android:layout_width="315dp"
                android:layout_height="55dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="38dp"
                android:backgroundTint="#1c9d6a"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/btnConverter"
                android:textSize="20sp"
                app:cornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>