<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="#712aaf"
    app:cardCornerRadius="35dp"
    app:cardElevation="8dp"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="469dp">

        <TextView
            android:id="@+id/tituloCadastrarReceita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Cadastrar meta"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtituloCadastrarMeta"
            android:layout_width="306dp"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Cadastre uma meta e fique por dentro dos seus objetivos financeiros!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tituloCadastrarReceita" />

        <TextView
            android:id="@+id/lblNomeReceita"
            android:layout_width="246dp"
            android:layout_height="18dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nome da meta"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtituloCadastrarMeta" />

        <EditText
            android:id="@+id/txtNomeReceita"
            android:layout_width="302dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/backgroud_verde"
            android:backgroundTint="#1C9D6A"
            android:fontFamily="@font/montserrat_medium"
            android:hint="ex: celular novo"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#BFBFBF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblNomeReceita" />

        <TextView
            android:id="@+id/lblTipoCadastrarReceita"
            android:layout_width="246dp"
            android:layout_height="18dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Valor necessÃ¡rio"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.202"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNomeReceita" />

        <EditText
            android:id="@+id/txtValorReceita"
            android:layout_width="302dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/backgroud_verde"
            android:backgroundTint="#1C9D6A"
            android:fontFamily="@font/montserrat_medium"
            android:hint="ex: R$5.000,00"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#BFBFBF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblTipoCadastrarReceita" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="311dp"
            android:layout_height="46dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="#1dc884"
            android:fontFamily="@font/montserrat_medium"
            android:text="Cadastrar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtValorReceita" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
