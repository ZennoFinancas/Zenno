<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_4"
    tools:context=".TelaProvisorioConversor">

    <EditText
        android:id="@+id/txtChecarCod2"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:background="@drawable/backgroud_verde"
        android:backgroundTint="#1C9D6A"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/hintChecarCodigo"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#BFBFBF"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/lblEmailLogin2"
        android:layout_width="283dp"
        android:layout_height="27dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/lblQuantia"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="203dp" />

    <TextView
        android:id="@+id/subtituloLogin2"
        android:layout_width="351dp"
        android:layout_height="32dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/subtituloCotacao"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/tituloLogin2"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/tituloCotacao"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="48dp" />
</androidx.constraintlayout.widget.ConstraintLayout>