<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_4"
    tools:context=".ui.home.TelaAnalise">

    <ImageView
        android:id="@+id/btnVoltarAnalise"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="347dp"
        android:contentDescription="Voltar"
        android:padding="8dp"
        android:src="@drawable/voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloAnalise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Análise de Gastos"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoltarAnalise" />

    <ImageView
        android:id="@+id/setaEsqAnalise"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/seta_direcional"
        app:layout_constraintBottom_toBottomOf="@+id/txtMesAnalise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtMesAnalise" />

    <TextView
        android:id="@+id/txtMesAnalise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Novembro 2025"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/setaDirAnalise"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/setaEsqAnalise"
        app:layout_constraintTop_toBottomOf="@+id/tituloAnalise" />

    <ImageView
        android:id="@+id/setaDirAnalise"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginEnd="32dp"
        android:rotationY="180"
        android:src="@drawable/seta_direcional"
        app:layout_constraintBottom_toBottomOf="@+id/txtMesAnalise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtMesAnalise" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMesAnalise">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartGastos"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/txtSemDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nenhuma despesa neste mês."
                android:textAlignment="center"
                android:textColor="#B0B0B0"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                tools:ignore="HardcodedText" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#2C2C2C"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/gemini_logo"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Análise Inteligente"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#00BF63"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarIA"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:indeterminateTint="#00BF63"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtAnaliseIA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Carregando insights sobre seus gastos..."
                        android:textColor="#E0E0E0"
                        android:textSize="13sp"
                        android:lineSpacingExtra="4dp"
                        android:fontFamily="@font/montserrat_medium"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>