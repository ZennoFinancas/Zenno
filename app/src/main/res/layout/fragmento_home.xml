<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtDespesa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_4"
    tools:context=".ui.home.HomeFragmento">

    <TextView
        android:id="@+id/lblSaldoAtual"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:text="R$ 0.00"
        android:textColor="@color/cor_nav"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="110dp" />

    <ImageView
        android:id="@+id/imgAddReceita"
        android:layout_width="84dp"
        android:layout_height="71dp"
        android:rotation="91"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="185dp"
        tools:srcCompat="@drawable/voltar" />

    <ImageView
        android:id="@+id/imgAddDespesa"
        android:layout_width="84dp"
        android:layout_height="71dp"
        android:rotation="-91"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="172dp"
        tools:srcCompat="@drawable/voltar" />

    <EditText
        android:id="@+id/txtReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="372dp" />

    <EditText
        android:id="@+id/txtDespesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="494dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="77dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/metas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="270dp" />

</androidx.constraintlayout.widget.ConstraintLayout>