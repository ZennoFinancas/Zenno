<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_roxo"
    android:backgroundTint="@color/theme_roxo"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/containerPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- TÍTULO DO POPUP -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Cadastrar Receita"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- NOME -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="14dp"
            android:hint="Digite o nome"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#DADADA" />

        <!-- CATEGORIA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="14dp">

            <Spinner
                android:id="@+id/spCategoria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

            <ImageView
                android:id="@+id/imgCategorias"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                app:srcCompat="@android:drawable/arrow_down_float" />
        </RelativeLayout>

        <!-- DATA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtData"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="14dp"
            android:autoText="false"
            android:hint="__/__/____"
            android:inputType="date"
            android:paddingStart="12dp"
            android:textColor="#FFFFFF" />

        <!-- VALOR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="6dp"
                android:text="R$"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtValor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="34dp"
                android:hint="Digite o valor"
                android:inputType="numberDecimal"
                android:paddingStart="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />
        </RelativeLayout>

        <!-- ESCOLHA ÍCONE -->
        <TextView
            android:id="@+id/txtEscolhaIcone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Escolha um ícone aqui!"
            android:textColor="#00E0B8"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- BOTÃO DE CONFIRMAR -->
    <ImageView
        android:id="@+id/btnEditConfirmar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/containerPopup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="18dp" />
</RelativeLayout>
