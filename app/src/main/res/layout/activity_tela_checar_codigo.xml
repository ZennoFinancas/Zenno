<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_1"
    tools:context=".TelaChecarCodigo">

    <EditText
        android:id="@+id/txtChecarCod"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/backgroud_verde"
        android:backgroundTint="#1C9D6A"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:hint="@string/hintChecarCodigo"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#BFBFBF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtituloChecarCod" />

    <Button
        android:id="@+id/btnChecarCod"
        android:layout_width="315dp"
        android:layout_height="55dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#712aaf"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/btnChecarCodigo"
        android:textSize="20sp"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChecarCod" />

    <TextView
        android:id="@+id/subtituloChecarCod"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/subtituloChecarCodigo"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloChecarCod" />

    <TextView
        android:id="@+id/tituloChecarCod"
        android:layout_width="278dp"
        android:layout_height="38dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="99dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/tituloChecarCodigo"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoChecarCod" />

    <ImageView
        android:id="@+id/imgVoltarChecarCod"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toStartOf="@+id/imgLogoChecarCod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />

    <ImageView
        android:id="@+id/imgLogoChecarCod"
        android:layout_width="191dp"
        android:layout_height="61dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_3" />
</androidx.constraintlayout.widget.ConstraintLayout>